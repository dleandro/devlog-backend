# MongoDB Configuration
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_AUTH_SOURCE=admin
DB_NAME=dbl_blog

# Server Configuration
PORT=8080
GIN_MODE=debug
ENVIRONMENT=development

# CORS Configuration
# For production, specify your frontend domains separated by commas
# Example: ALLOWED_ORIGINS=https://yourblog.vercel.app,https://www.yourblog.com
ALLOWED_ORIGINS=https://dbl-blog.vercel.app

# Authentication Configuration
# Generate secure API keys for admin operations
# Use multiple keys separated by commas for key rotation
# Example: openssl rand -hex 32
ADMIN_API_KEYS=key1-here,key2-here,key3-here

# Rate Limiting Configuration

# Admin endpoint rate limiting (requests per minute)
# Controls rate limiting for protected admin operations (create, update, delete)
ADMIN_RATE_LIMIT_PER_MINUTE=30

# Public Endpoint Rate Limiting (Optional)
# Set to "true" to enable additional rate limiting on public endpoints
# This provides extra protection beyond hosting provider limits (Vercel/Railway)
# Recommended for high-traffic production deployments
ENABLE_PUBLIC_RATE_LIMIT=false

# Public endpoint rate limits (when ENABLE_PUBLIC_RATE_LIMIT=true)
# GET requests (browsing posts)
PUBLIC_GET_RATE_LIMIT_PER_MINUTE=120
# Social interactions (likes, views)
PUBLIC_SOCIAL_RATE_LIMIT_PER_MINUTE=60
# Other public endpoints
PUBLIC_DEFAULT_RATE_LIMIT_PER_MINUTE=100
